MIN_CLEAR_BYTES  = 48

if (size <= MIN_CLEAR_BYTES) {
  clear_size = size
  encrypted_size = 0
  return
}

encrypted_size =  16 * ceil ((size - MIN_CLEAR_BYTES) / 16 )

